# Copy to .env for local development or .env.production for deployment

# SSH connection
DEPLOY_HOST=your.server.example
DEPLOY_USER=deploy
DEPLOY_GROUP=deploy

# App settings
DEPLOY_PROJECT_NAME=my-app
DEPLOY_TARGET=linux-amd64

# Database (defaults to app.db in working directory)
# DATABASE_URL=app.db

# Deploy paths (defaults)
# DEPLOY_BIN_PATH=/usr/local/bin
# DEPLOY_ETC_PATH=/etc
# DEPLOY_WWW_PATH=/var/www
# DEPLOY_LIB_PATH=/var/lib

# OpenTelemetry (Vector receives traces on localhost)
OTEL_EXPORTER_OTLP_ENDPOINT=http://127.0.0.1:4318
OTEL_SERVICE_NAME=${DEPLOY_PROJECT_NAME}
