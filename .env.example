# Copy to .env for local development or .env.production for deployment

# SSH connection
DEPLOY_HOST=your.server.example
DEPLOY_USER=deploy
DEPLOY_GROUP=deploy

# App settings
DEPLOY_PROJECT_NAME=my-app
DEPLOY_TARGET=linux-amd64

# Database (defaults to app.db in working directory)
# DATABASE_URL=app.db

# Deploy paths (defaults)
# DEPLOY_BIN_PATH=/usr/local/bin
# DEPLOY_ETC_PATH=/etc
# DEPLOY_WWW_PATH=/var/www
# DEPLOY_LIB_PATH=/var/lib

# Forgejo Git forge (optional)
# FORGEJO_DOMAIN=git.example.com
# FORGEJO_HTTP_PORT=3001
# FORGEJO_SSH_PORT=22
# FORGEJO_SECRET_KEY=<run: forgejo generate secret SECRET_KEY>
# FORGEJO_INTERNAL_TOKEN=<run: forgejo generate secret INTERNAL_TOKEN>

# Litestream SQLite replication (S3-compatible storage)
# LITESTREAM_ACCESS_KEY_ID=your-access-key
# LITESTREAM_SECRET_ACCESS_KEY=your-secret-key
# LITESTREAM_BUCKET=your-bucket-name
# LITESTREAM_ENDPOINT=https://s3.amazonaws.com
# LITESTREAM_SYNC_INTERVAL=1s

# OpenTelemetry (Vector receives traces on localhost)
OTEL_EXPORTER_OTLP_ENDPOINT=http://127.0.0.1:4318
OTEL_SERVICE_NAME=${DEPLOY_PROJECT_NAME}
